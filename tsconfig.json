{
//  "version": "2.2.2",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "my-tsconfig.json"
      }
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "types/**"
    ],
    "lib": ["es2015", "es2017", "dom"]
  },
  "exclude": [
    "node_modules",
    "public/built"
  ]
}